generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Style {
  id           BigInt   @id @default(autoincrement())
  title        String
  nickname     String
  thumbnail    String?
  tags         String[] @default([])
  components   String[] @default([])
  description  String?
  views        Int      @default(0)
  curatedCount Int      @default(0)
  images       String[] @default([])
  createdAt    DateTime @default(now())

  curations    Curation[]
}

model Curation {
  id                         Int      @id @default(autoincrement())
  styleId                    BigInt
  trndyScore                 Int
  individualityScore         Int
  practicalityScore          Int
  costEffectivenessScore     Int
  oneLineReview              String
  postNickname               String
  password                   String
  curationContent            String?
  createdAt                  DateTime @default(now())

  style     Style    @relation(fields: [styleId], references: [id])
  replies   Reply[]
}

model Reply {
  id          Int      @id @default(autoincrement())
  curationId  Int
  content     String
  nickname    String?
  password    String
  createdAt   DateTime @default(now())

  curation Curation @relation(fields: [curationId], references: [id])
}
