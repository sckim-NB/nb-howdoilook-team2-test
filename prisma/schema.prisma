generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  //url      = env("DATABASE_URL")
}

model Style {
  id           BigInt   @id @default(autoincrement())
  title        String
  nickname     String
  thumbnail    String?
  tags         String[] @default([])
  components   String[] @default([])
  description  String?
  views        Int      @default(0)
  curatedCount Int      @default(0)
  images       String[] @default([])
  createdAt    DateTime @default(now())

  curations     Curation[] // Curation 모델과의 1:N 관계
}

model Curation {
  // Primary Key, 자동 증가
  id          BigInt   @id @default(autoincrement())

  // front-end에서 숫자로만 점수를 받아옴
  // style 과는 N:1 관계, Foreign Key - 필수
  styleId     BigInt
  style       Style   @relation(fields: [styleId], references: [id])

  // 점수 - 필수
  trendyScore            BigInt 
  individualityScore     BigInt
  practicalityScore      BigInt
  costEffectivenessScore BigInt

  oneLineReview String
  postNickname  String
  password      String
  createdAt     DateTime @default(now())
  
  // reply와는 1:1 관계 ( 큐레이팅에 대한 답글은 최대 1개 )
  // reply Reply?
}
