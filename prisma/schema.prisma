generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model Style {
  id            BigInt    @id @default(autoincrement())
  title         String
  nickname      String
  thumbnail     String?
  tags          String[]  @default([])
  components    String[]  @default([])
  description   String?
  views         Int       @default(0)
  curatedCount  Int       @default(0)
  images        String[]  @default([])
  createAt      DateTime  @default(now())
}